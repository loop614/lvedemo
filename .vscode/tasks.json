{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "LveDemoBuild",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-o",
                "${workspaceFolder}/LveDemo",
                {
                    "value": "${workspaceFolder}/main.cpp",
                    "quoting": "escape"
                },
                {
                    "value": "${workspaceFolder}/little_vulkan_engine/*.cpp",
                    "quoting": "escape"
                },
                "-ggdb",
                "-lglfw",
                "-lvulkan",
                "-ldl",
                "-lpthread",
                "-lX11",
                "-lXxf86vm",
                "-lXrandr",
                "-lXi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "VertShaderBuild",
                "FragShaderBuild"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "VertShaderBuild",
            "command": "/usr/bin/glslc",
            "args": [
                "shaders/shader.vert",
                "-o",
                "shaders/vert.spv"
            ],
        },
        {
            "type": "shell",
            "label": "FragShaderBuild",
            "command": "/usr/bin/glslc",
            "args": [
                "shaders/shader.frag",
                "-o",
                "shaders/frag.spv"
            ],
        }
    ],
    "version": "2.0.0"
}
